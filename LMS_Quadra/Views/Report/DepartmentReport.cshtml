@model DateRangeViewModel

<div id="wrapper">
    <div id="main">
        <div class="inner">
            <section>
                <header class="major">
                    <h2>Количество пройденных курсов по отделам в заданный период времени</h2>
                </header>

                <form method="post">
                    <div>
                        <div class="create_form_element">
                            <div class="form-group">
                                <label asp-for="StartDate"></label>
                                <input asp-for="StartDate" type="date" class="form-control">
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="create_form_element">
                            <div class="form-group">
                                <label asp-for="EndDate"></label>
                                <input asp-for="EndDate" type="date" class="form-control">
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="create_form_buttons">
                        <button type="submit" class="btn btn-primary">Сформировать отчёт</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
    @await Html.PartialAsync("_SidebarPartial")
</div>