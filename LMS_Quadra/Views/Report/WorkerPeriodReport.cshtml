@model WorkerPeriodReportViewModel

<div id="wrapper">
    <div id="main">
        <div class="inner">
            <section>
                <header class="major">
                    <h2>Пройденные сотрудником курсы за заданный период</h2>
                </header>

                <form method="post">
                    <div>
                            <div class="create_form_element">
                                <label>Сотрудник</label>
                                <select asp-for="WorkerId"
                                        asp-items="@ViewBag.Workers"
                                        class="form-control">
                                    <option value="">- Выберите сотрудника -</option>
                                </select>
                                <span asp-validation-for="WorkerId" class="text-danger"></span>
                            </div>

                        <div class="create_form_element">
                                <label asp-for="StartDate"></label>
                                <input asp-for="StartDate" type="date" class="form-control">
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="create_form_element">
                                <label asp-for="EndDate"></label>
                                <input asp-for="EndDate" type="date" class="form-control">
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="create_form_buttons">
                        <button type="submit" class="btn btn-primary">Сформировать отчёт</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
    @await Html.PartialAsync("_SidebarPartial")
</div>